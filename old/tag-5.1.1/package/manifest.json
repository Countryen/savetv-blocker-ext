{
  "manifest_version": 2,

  "name": "C0 SaveTV Blocker",
  "description": "Kleine Hilfe für www.save.tv. Versteckt definierte Serien, Filme, etc. automatisch für eine bessere Übersicht.",
  "version": "5.1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "C0 SaveTV Blocker"
  },

  "content_scripts": [ {
      "css": [ "style.css" ],
      "js": ["C0Logger.js", "C0Storage.js", "script.js"],
      "matches": [ "*://www.save.tv/*" ],
      "run_at": "document_start" 
      } 
  ],

  "permissions": [ "contextMenus", "storage", "activeTab" ],

  "background": {
      "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
      "8": "icon.png",
      "16": "icon.png",
      "32": "icon.png",
      "64": "icon.png",
      "128": "icon.png",
      "256": "icon.png"
  }
}